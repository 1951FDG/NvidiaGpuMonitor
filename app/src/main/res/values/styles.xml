<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.V21.Theme.AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Original AppCompat attributes. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="preferenceTheme">@style/ThemeOverlay.App.Preference</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="Widget.MaterialComponents.CheckedTextView" parent="Base.Widget.MaterialComponents.CheckedTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSecondary</item>
        <item name="android:textColor">@color/material_on_surface_emphasis_medium</item>
    </style>

    <style name="Base.Theme.AppTheme" parent="Base.V21.Theme.AppTheme" />

    <style name="AppTheme" parent="Base.Theme.AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="ThemeOverlay.Settings.Preference" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList.Material.Custom</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference.Material.Custom</item>
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.Material.Custom</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment.Material.Custom</item>
    </style>

    <style name="ThemeOverlay.App.Preference" parent="@style/PreferenceThemeOverlay">
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference.Material.Custom</item>
    </style>

    <style name="PreferenceFragment.Material.Custom" parent="@style/PreferenceFragment.Material">
        <item name="android:divider">@null</item>
    </style>

    <style name="Preference.CheckBoxPreference.Material.Custom" parent="@style/Preference.CheckBoxPreference.Material">
        <item name="android:layout">@layout/abc_preference_material_layout</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.DialogPreference.EditTextPreference.Material.Custom" parent="@style/Preference.DialogPreference.EditTextPreference.Material">
        <item name="android:dialogLayout">@layout/abc_preference_dialog_edittext</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:dialogCornerRadius" tools:ignore="NewApi">@dimen/mtrl_shape_corner_size_medium_component</item>
    </style>

    <style name="Base.V21.Theme.AppTheme.Settings" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Original AppCompat attributes. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@android:color/white</item>

        <item name="preferenceTheme">@style/ThemeOverlay.Settings.Preference</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

    </style>

    <style name="AppTheme.Licenses" parent="AppTheme.Settings">
        <item name="actionBarStyle">@style/Widget.MaterialComponents.Light.ActionBar.Solid.Custom</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>

        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

    </style>

    <style name="Widget.MaterialComponents.Light.ActionBar.Solid.Custom" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@null</item>
        <item name="backgroundStacked">@null</item>
        <item name="backgroundSplit">@null</item>

    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?android:attr/textColorSecondary</item>

    </style>

    <style name="Base.Theme.AppTheme.Settings" parent="Base.V21.Theme.AppTheme.Settings" />

    <!--https://issuetracker.google.com/issues/68454482-->
    <!--https://android.googlesource.com/platform/frameworks/base/+/android-8.0.0_r1/services/core/java/com/android/server/am/ActivityRecord.java-->
    <!--android-8.0: Only fullscreen opaque activities can request orientation-->
    <!--Do not use windowIsTranslucent!-->
    <style name="AppTheme.Settings" parent="Base.Theme.AppTheme.Settings">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title" />

    <style name="Theme.AlertDialogHost" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="EasyPermissions" parent="AppTheme" />

    <!--<style name="PreferenceSummaryTextStyle" tools:override="true">-->
        <!--<item name="android:textAppearance">?android:attr/textAppearanceListItemSecondary</item>-->
    <!--</style>-->

    <style name="PreferenceFragmentList.Material.Custom" parent="@style/PreferenceFragmentList.Material">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:transitionGroup">true</item>
    </style>

