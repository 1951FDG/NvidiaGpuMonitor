<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/title_openvpnmgmt">
    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_openvpnmgmt_key"
        android:title="@string/pref_openvpnmgmt" />
    <EditTextPreference
        android:defaultValue="@string/pref_openvpnmgmt_host_default"
        android:dependency="@string/pref_openvpnmgmt_key"
        android:key="@string/pref_openvpnmgmt_host_key"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_openvpnmgmt_host"
        app:useSimpleSummaryProvider="true" />
    <EditTextPreference
        android:defaultValue="@string/pref_openvpnmgmt_port_default"
        android:dependency="@string/pref_openvpnmgmt_key"
        android:key="@string/pref_openvpnmgmt_port_key"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_openvpnmgmt_port"
        app:useSimpleSummaryProvider="true" />
    <io.github.getsixtyfour.openpyn.security.SecuredEditTextPreference
        android:defaultValue="@string/pref_openvpnmgmt_password_default"
        android:dependency="@string/pref_openvpnmgmt_key"
        android:dialogLayout="@layout/abc_preference_dialog_edittext_copy"
        android:key="@string/pref_openvpnmgmt_password_key"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_openvpnmgmt_password" />
    <EditTextPreference
        android:defaultValue="@string/pref_openvpnmgmt_password_file_default"
        android:dependency="@string/pref_openvpnmgmt_key"
        android:key="@string/pref_openvpnmgmt_password_file_key"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_openvpnmgmt_password_file"
        app:useSimpleSummaryProvider="true" />
    <PreferenceCategory
        android:dependency="@string/pref_openvpnmgmt_key"
        android:title="@string/category_notifications">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_openvpnmgmt_bandwidth_usage_key"
            android:title="@string/pref_openvpnmgmt_bandwidth_usage" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_openvpnmgmt_state_changes_key"
            android:title="@string/pref_openvpnmgmt_state_changes" />
    </PreferenceCategory>
    <PreferenceCategory
        android:dependency="@string/pref_openvpnmgmt_key"
        android:title="@string/category_advanced">
        <EditTextPreference
            android:defaultValue="@string/pref_openvpnmgmt_username_default"
            android:key="@string/pref_openvpnmgmt_username_key"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_openvpnmgmt_username"
            app:useSimpleSummaryProvider="true" />
        <io.github.getsixtyfour.openpyn.security.SecuredEditTextPreference
            android:defaultValue="@string/pref_openvpnmgmt_userpass_default"
            android:dialogLayout="@layout/abc_preference_dialog_edittext_copy"
            android:key="@string/pref_openvpnmgmt_userpass_key"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_openvpnmgmt_userpass" />
    </PreferenceCategory>
</PreferenceScreen>
