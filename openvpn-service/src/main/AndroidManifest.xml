<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.getsixtyfour.openvpnmgmt">
    <application>
        <!-- Private activity -->
        <activity
            android:name="com.getsixtyfour.openvpnmgmt.android.DisconnectActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:finishOnCloseSystemDialogs="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:taskAffinity="com.getsixtyfour.openvpnmgmt"
            android:theme="@style/Theme.AlertDialogHost" />
        <!-- Private service -->
        <service
            android:name="com.getsixtyfour.openvpnmgmt.android.OpenVpnService"
            android:exported="false"
            android:label="@string/vpn_service_name"
            android:process=":remote" />
    </application>
</manifest>
